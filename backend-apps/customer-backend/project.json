{
  "name": "customer-backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "customer-backend/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "webpack-cli build",
        "args": ["--node-env=production"],
        "cwd": "customer-backend"
      },
      "configurations": {
        "development": {
          "args": ["--node-env=development", "--watch"]
        },
        "production": {
          "args": ["--node-env=production", "--mode=production"]
        }
      }
    },
    "prune-lockfile": {
      "dependsOn": ["build"],
      "cache": true,
      "executor": "@nx/js:prune-lockfile",
      "outputs": [
        "{workspaceRoot}/dist/customer-backend/package.json",
        "{workspaceRoot}/dist/customer-backend/pnpm-lock.yaml"
      ],
      "options": {
        "buildTarget": "build"
      }
    },
    "copy-workspace-modules": {
      "dependsOn": ["build"],
      "cache": true,
      "outputs": ["{workspaceRoot}/dist/customer-backend/workspace_modules"],
      "executor": "@nx/js:copy-workspace-modules",
      "options": {
        "buildTarget": "build"
      }
    },
    "prune": {
      "dependsOn": ["prune-lockfile", "copy-workspace-modules"],
      "executor": "nx:noop"
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "customer-backend:build",
        "runBuildTargetDependencies": false,
        "watch": true
      },
      "configurations": {
        "development": {
          "buildTarget": "customer-backend:build:development"
        },
        "production": {
          "buildTarget": "customer-backend:build:production"
        }
      }
    },
    "test": {
      "options": {
        "passWithNoTests": true
      }
    },
    "docker:dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker-compose -f docker-compose.dev.yml up",
        "cwd": "customer-backend"
      }
    },
    "docker:prod": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker-compose -f docker-compose.prod.yml up -d",
        "cwd": "customer-backend"
      }
    },
    "docker:down": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker-compose down",
        "cwd": "customer-backend"
      }
    }
  }
}
