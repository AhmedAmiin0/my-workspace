{
  "name": "customer-backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "customer-backend/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/customer-backend",
        "main": "customer-backend/src/main.ts",
        "tsConfig": "customer-backend/tsconfig.app.json",
        "assets": ["customer-backend/src/assets"]
      },
      "configurations": {
        "development": {
          "optimization": false,
          "sourceMap": true
        },
        "production": {
          "optimization": true,
          "sourceMap": false
        }
      }
    },
    "prune-lockfile": {
      "dependsOn": ["build"],
      "cache": true,
      "executor": "@nx/js:prune-lockfile",
      "outputs": [
        "{workspaceRoot}/dist/customer-backend/package.json",
        "{workspaceRoot}/dist/customer-backend/pnpm-lock.yaml"
      ],
      "options": {
        "buildTarget": "build"
      }
    },
    "copy-workspace-modules": {
      "dependsOn": ["build"],
      "cache": true,
      "outputs": ["{workspaceRoot}/dist/customer-backend/workspace_modules"],
      "executor": "@nx/js:copy-workspace-modules",
      "options": {
        "buildTarget": "build"
      }
    },
    "prune": {
      "dependsOn": ["prune-lockfile", "copy-workspace-modules"],
      "executor": "nx:noop"
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "customer-backend:build",
        "runBuildTargetDependencies": false,
        "watch": true
      },
      "configurations": {
        "development": {
          "buildTarget": "customer-backend:build:development"
        },
        "production": {
          "buildTarget": "customer-backend:build:production"
        }
      }
    },
    "test": {
      "options": {
        "passWithNoTests": true
      }
    },
    "docker:dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker-compose -f docker-compose.dev.yml up",
        "cwd": "customer-backend"
      }
    },
    "docker:prod": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker-compose -f docker-compose.prod.yml up -d",
        "cwd": "customer-backend"
      }
    },
    "docker:down": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker-compose down",
        "cwd": "customer-backend"
      }
    }
  }
}
